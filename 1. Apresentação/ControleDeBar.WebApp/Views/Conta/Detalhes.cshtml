@model DetalhesContaViewModel

@{
    ViewBag.Titulo = "Detalhes da Conta";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
              
                <h3>Detalhes da Conta</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label asp-for="Titular" class="control-label fs-5">Titular:</label>
                    <input asp-for="Titular" class="form-control" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label asp-for="Mesa" class="control-label fs-5">Mesa:</label>
                    <input asp-for="Mesa" class="form-control" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label asp-for="Garcom" class="control-label fs-5">Garçom:</label>
                    <input asp-for="Garcom" class="form-control" readonly disabled />
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label asp-for="ValorTotal" class="control-label fs-5">Valor Total (R$):</label>
                    <input asp-for="ValorTotal" type="number" min="0" step="0.01" pattern="^\d+(?:\,\d{1,2})?$" class="form-control" readonly disabled />
                </div>

                @if (!Model.Pedidos.Any())
                {
                    <p class="fw-semibold mt-3">Ainda não há nenhum pedido relacionado à conta...</p>
                }
                else
                {
                    <table class="table table-sm table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Qtd.</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (PedidoContaViewModel pedido in Model.Pedidos)
                            {
                                <tr>
                                    <td>@pedido.Produto</td>
                                    <td>@pedido.QuantidadeSolicitada</td>
                                    <td>@pedido.TotalParcial.ToString("C2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a asp-action="Index">Voltar para a listagem</a>
                </div>
            </div>
        </div>
    </div>
</div>