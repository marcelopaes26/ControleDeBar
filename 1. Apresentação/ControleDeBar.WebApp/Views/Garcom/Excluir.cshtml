@{
	ViewBag.Titulo = "Exclusão de Garçom";
}

@model ExcluirGarcomViewModel;

<div class="row justify-content-center">
    <form class="col-6" asp-action="Excluir" method="post">
        <p>Deseja realmente excluir o garçom "@Model.Nome"?</p>

        <input asp-for="Nome" type="hidden" />

        <div class="d-flex gap-2 justify-content-end">
            <a asp-action="Index" class="btn btn-outline-primary px-5">Voltar</a>
            <button class="btn btn-primary px-5">Gravar</button>
        </div>
    </form>
</div>