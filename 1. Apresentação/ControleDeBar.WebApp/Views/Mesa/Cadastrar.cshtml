@{
	ViewBag.Titulo = "Cadastro de Mesa";
}

@model CadastrarMesaViewModel;

<div class="row justify-content-center">
    <form class="col-lg-8 col-xl-6" asp-action="Cadastrar" method="post">
        <div class="mb-3">
            <label asp-for="Numero" class="form-label">Número</label>
            <input class="form-control" asp-for="Numero">
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacidade" class="form-label">Capacidade de Lugares</label>
            <input class="form-control" asp-for="Capacidade">
            <span asp-validation-for="Capacidade" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a asp-action="Index" class="btn btn-outline-primary px-5">Voltar</a>
            <button class="btn btn-primary px-5">Gravar</button>
        </div>
    </form>
</div>